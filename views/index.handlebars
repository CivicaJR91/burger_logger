<h1>Eat-Da-Burger</h1>

<h2>Your Burgers</h2>
<ul>
{{#each burgers}}
    {{> burgers/ burger-block devoured = true}}
{{/unless}}
{{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/ burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Your Burger</h2>

<form class="create-form">
    <div class = "form-group"></div>
    <label for="burger">Burger Name:</label>
    <input type="text" id="bur" name="name">
</div>
<button type="submit">Add Burger</button>
</form>

<li>
	{{name}}
<button class="change-devoured" data-id="{{id}}" data-newsleep="{{devoured}}">
		{{#if devoured}}Devoured{{else}}Devoured2{{/if}}
	</button>

	<button class="devoured-burger" data-id="{{this.id}}">Devoured3</button>
</li>
